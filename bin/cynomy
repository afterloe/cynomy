 * bin/cynomy
 */
"use strict";

const [program, {resolve}] = [require("commander"), require("path")];
const config = require(resolve(__dirname, "..", "config"));

// 设置cynomy客户端命令行版本
program.version(config.get("version"));

// help 命令
program.
	command("help").
	description("显示使用帮助").
	action(() => {
		program.outputHelp();
	});

// 安装框架
program.
	command("install").
	description("安装cynomy系列软件").
	option("-f, --frame <frame>", "基础框架").
	action(options => require(resolve(__dirname, "..", "lib", "installProject"))(options));

// 创建文件
program.
	command("c <file>").
	description("创建python, javascript, markdown, css, binary, bash 文件").
	option("-t, --type <type>", "文件类型 js|py|bash").
	action((file, options) => require(resolve(__dirname, "..", "lib", "createFile"))(file, options));

if (process.argv.length < 3 ) {
	process.argv.push("help");
}

program.parse(process.argv);
